<script type="text/javascript" charset="utf-8">
  (function() {

   $("#search-field").keyup(function(e) {
       if (e.keyCode === 13) {
          var search_term = $("#search-field").val();
          document.location.href = "/search?q=" + search_term;
       }
     }
   );

