<div class="section">
  <div class="container">
    <div class="row top-buffer-messages bottom-buffer">
      <div class="col s12 m3">
        <div class="row">
          <div class="col s12">
            <p><%= link_to 'New conversation', new_message_path, class: 'btn' %></p>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <ul class="collection">
              <li class="collection-item"><h5><%= mailbox_section 'inbox', @box %></h5></li>
              <li class="collection-item"><h5><%= mailbox_section 'sent', @box %></h5></li>
              <li class="collection-item"><h5><%= mailbox_section 'trash', @box %></h5></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col s12 m7 offset-m1">
        <h4 class="primary-text-color">Messages</h4>
        <ul class="collection">
          <%= render partial: 'conversations/conversation', collection: @conversations %>
        </ul>
        <%= will_paginate @conversations, renderer: MaterializePagination::Rails %>

        <% if @box == 'trash' %>
          <p><h6><i>Messages will be automatically deleted after 30 days</i></h6></p>
        <% end %>
      </div>
    </div>

  </div>
</div>
