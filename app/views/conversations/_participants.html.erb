<% participant_count = 0 %>

<% conversation.participants.each do |participant, index| %>
  <% if participant != current_user %>
    <% participant_count += 1 %>

    <% if (participant_count != 1) %>
      ,&nbsp;
    <% end %>
    <% participant_profile_url = "/users/#{participant.username}" %>
    <%= link_to participant.first_name + " " + participant.last_name, participant_profile_url, :class => 'mailboxer-blue-text' %>
  <% end %>
<% end %>


<% if participant_count == 0 %>
  Myself
<% end %>
