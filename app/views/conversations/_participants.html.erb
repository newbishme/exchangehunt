<% participants = conversation.participants.reject { |c| c == current_user }.compact %>
<% participants.each_with_index do |participant, index| %>
  <%= link_to participant.full_name,
    user_path(participant.username),
    :class => 'mailboxer-blue-text' %><% if index != participants.count - 1 %>,<% end %>
<% end %>

<% if participants.empty? %>
  Myself
<% end %>
